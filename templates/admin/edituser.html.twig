{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">{% endblock %}
{% block body %}
    
    <br>
    <div class="container">
        <div class="col-md-6 col-md-offset-5">
        {% if user.id == app.user.id %}
            <h1>Votre profil</h1>
        {% else %}
        <h1>Modifier un utilisateur</h1>
        {% endif %}
            {{ form_start(userForm) }}
            <div class="form-group">
            {{form_row(userForm.email, {'label' : 'Email :','attr' : 
            {'placeholder' : 'Email...' , 'class': "form-control"}})}}
            </div>

            <div class="form-group">
             {{form_row(userForm.roles, {'label':"Roles :", 'attr':{ 'placeholder':"Roles....", 'class': "form-control"}})}}
            </div>

            <div class="form-group">
                 {{form_row(userForm.nomComplet, {'label' : 'Nom complet','attr' : 
                    {'placeholder' : 'Nom d\'utilisateur...' , 'class': "form-control"}})}}
            </div>

            <div class="form-group">
                {{form_row(userForm.image, {'label':"Photo de profil", 'attr':{'placeholder' : 'Choisir votre photo de profil', 
                'class': "form-control"	}})}}
            </div>

            <div class="form-group">
                {{form_row(userForm.telephone, {'label' : 'Numéro de téléphone','attr' : 
                {'placeholder' : 'Numéro de téléphone...', 'class': "form-control"}})}}
            </div>

            <div class="form-group">
             {{form_row(userForm.valider, {'label':"Valider", 'attr':{ 'placeholder':"Valider", 'class': "btn btn-success"}})}}
            </div> 
            {{ form_end(userForm) }}
        
        </div>
    </div>
{% endblock %}
