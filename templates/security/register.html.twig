<head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>

{% block body%}
    
    <div class="container">
        <div class="col-md-6 col-md-offset-5">
        <div class="alert alert-dismissible alert-success">
  
  <h4 class="alert-heading"> <u>Page d'inscription</u> </h4>
</div>
            {{form_start(form)}}
    <div class="form-group">
        {{form_row(form.nomComplet, {'label' : 'Nom complet','attr' : 
    {'placeholder' : 'Nom d\'utilisateur...' , 'class': "form-control"}})}}
    </div>
    <div class="form-group">
        {{form_row(form.email, {'label' : 'Adresse email','attr' : 
    {'placeholder' : 'Adresse email...' , 'class': "form-control"}})}}
    </div>
       
    <div class="form-group">
         {{form_row(form.telephone, {'label' : 'Numéro de téléphone','attr' : 
    {'placeholder' : 'Numéro de téléphone...', 'class': "form-control"}})}}
    </div>

    
    <div class="form-group">
        {{form_row(form.password, {'label' : 'Mot de passe','attr' : 
    {'placeholder' : 'Mot de passe !', 'class': "form-control"}})}}
    </div>
    <div class="form-group">
        {{form_row(form.confirm_password, {'label' : 'Confirmation du mot de passe','attr' : 
    {'placeholder' : 'Répétez votre mot de passe', 'class': "form-control"}})}}
    </div>
    <div class="form-group">
        {{form_row(form.image, {'label':"Photo de profil", 'attr':{'placeholder' : 'Choisir votre photo de profil', 
        'class': "form-control"	}})}}
    
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-success">Inscription !</button>
    </div>

    {{form_end(form)}}
    <a class="text-success" href="{{ path('security_login') }}">
    Dèjà inscrit ! Se connecter 
    </a>
        </div>
    </div>
    
{% endblock %}