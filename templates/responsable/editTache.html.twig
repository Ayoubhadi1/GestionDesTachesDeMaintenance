{% extends 'base.html.twig' %}

{% block title %}Hello ResponsableController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-md-6 col-md-offset-5">
        <div class="alert alert-dismissible alert-success">
  
  <h4 class="alert-heading"> <u>
  Modifier ordre de travail 
  
  </u> </h4>
</div>
            {{form_start(formTache)}}
    <div class="form-group">
        {{form_row(formTache.titre, {'label' : 'Titre','attr' : 
    {'placeholder' : "Titre de l'ordre de travail..." , 'class': "form-control"}})}}
    </div>
    <div class="form-group">
        {{form_row(formTache.description, {'label' : 'Description','attr' : 
    {'placeholder' : 'Description...' , 'class': "form-control"}})}}
    </div>
       
    <div class="form-group">
         {{form_row(formTache.dateFin, {'label':"Fin de l'ordre de travail...", 'attr':{ 'placeholder':"Fin de la tache....", 'class': "form-control"}})}}
    </div>

   

    
    
    <div class="form-group">
        <button type="submit" class="btn btn-success">
        
                Valider
        </button>
    </div>

    {{form_end(formTache)}}
    
    {#{{dump(formTache)}}#}
        </div>
    </div>
{% endblock %}